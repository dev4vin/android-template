<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/auth_graph"
        app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.app.auth.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" />
    <fragment
            android:id="@+id/registrationFragment"
            android:name="com.app.auth.register.RegistrationFragment"
            android:label="fragment_registration"
            tools:layout="@layout/fragment_registration" />
    <fragment
            android:id="@+id/passwordResetFragment"
            android:name="com.app.auth.password_reset.PasswordResetFragment"
            android:label="fragment_password_reset"
            tools:layout="@layout/fragment_password_reset" />
    <fragment
            android:id="@+id/OTPVerificationFragment"
            android:name="com.app.auth.otp.OTPVerificationFragment"
            android:label="fragment_otpverification"
            tools:layout="@layout/fragment_otpverification" />
</navigation>