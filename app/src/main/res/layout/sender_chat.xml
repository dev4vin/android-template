<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="@dimen/small"
        android:paddingEnd="@dimen/small">

    <TextView
            android:id="@+id/sender_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="2 hrs ago" />

    <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender_time_text_view"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sender_chat_background"
            android:elevation="2dp"
            android:padding="@dimen/medium"
            android:textColor="@color/color_on_secondary"
            android:textSize="18sp"
            tools:text="Placeholder message" />

</RelativeLayout>